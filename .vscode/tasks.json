    "version": "2.0.0",
    "tasks": [
        {
            "label": "Convert Markdown -> HTML",
            "type": "shell",
            "command": "${workspaceFolder}/gradlew",
            "args": ["-t", "build-html", "-Ppython=${config:python.pythonPath}"],
            "problemMatcher": [],
            "presentation": {
                "group": "converter"
            }
        },
        {
            "label": "Convert Markdown -> PDF [TeX]",
            "type": "shell",
            "command": "${workspaceFolder}/gradlew",
            "args": ["-t", "build-pdf-tex", "-Ppython=${config:python.pythonPath}"],
            "problemMatcher": [],
            "presentation": {
                "group": "converter"
            }
        },
        {
            "label": "Convert Markdown -> Jira",
            "type": "shell",
            "command": "${workspaceFolder}/gradlew",
            "args": ["-t", "build-jira", "-Ppython=${config:python.pythonPath}"],
            "problemMatcher": [],
            "presentation": {
                "group": "converter"
            }
        },
        // {
