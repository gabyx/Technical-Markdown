        // },
        {
            "label": "Show HTML Output",
            "type": "shell",
            "command": "${workspaceFolder}/gradlew",
            "args": ["-t", "view-html", "-Ppython=${config:python.pythonPath}"],
            "problemMatcher": [],
            "presentation": {
                "group": "converter"
            }
        }
    ]
}
